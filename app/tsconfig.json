{
    "compilerOptions": {
        "jsx": "react",
        "alwaysStrict": true,
        "baseUrl": "../tools/definitions/",
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "es6",
        "strictBindCallApply": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,

        "strictPropertyInitialization": true,
        "strictNullChecks": true,

        "paths": {
            "*": [
                "../app/modules/*"
            ],
            "*/wclib.js": ["wclib"],
            "*/lit-html.js": ["lit-html"]
        }
	}, 
    "allowJs": true,
    "compileOnSave": true,
    "include": [
        "./"
    ],
    "exclude": [
        "./elements",
        "./tools/definitions/polymer.d.ts",
        "./js/libraries/crmapi.d.ts",
        "./bower_components",
        "_locales",
        "localestemp",
        "./modules/"
    ]
}