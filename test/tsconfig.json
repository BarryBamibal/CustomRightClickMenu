{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "../tools/definitions/",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "es6",
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "paths": {
            "*": [
                "../app/modules/*"
            ],
            "*/wclib.js": ["wclib"],
            "*/lit-html.js": ["lit-html"]
        }
	}, 
    "allowJs": true,
    "compileOnSave": true,
    "include": [
        "./"
    ]
}