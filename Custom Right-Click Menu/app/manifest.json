{
	"manifest_version": 2,

	"options_page": "options.html",
	"name": "Custom Right-Click Menu Legacy",
	"description": "Create a custom right-mouse menu.",
	"version": "1.1.2",
	"minimum_chrome_version": "26",

	"background": {
		"scripts": ["jquery-2.0.3.min.js", "background.js"]
	},

	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["jquery-2.0.3.min.js", "contentscript.js"]
		}
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

	"permissions": [  
		"tabs",
		"<all_urls>",
		"activeTab",
		"contextMenus"
	],
  
	"web_accessible_resources": [
		"jquery-2.0.3.min.map",
		"jquery-2.0.3.min.js",
		"jquery-2.0.3.js"
	],
  
	"optional_permissions": [
		"http://*/",
		"alarms",
		"background",
		"bookmarks",
		"browsingData",
		"clipboardRead",
		"clipboardWrite",
		"contentSettings",
		"cookies",
		"desktopCapture",
		"downloads",
		"history",
		"idle",
		"notifications",
		"management",
		"notifications",
		"power",
		"privacy",
		"pushMessaging",
		"storage",
		"topSites",
		"tabCapture",
		"tts",
		"webNavigation",
		"webRequest",
		"webRequestBlocking"
	],
  

	"icons": {
	"16": "icon-supersmall.png",
	"48": "icon-small.png",
	"128": "icon-large.png"
	}  
}